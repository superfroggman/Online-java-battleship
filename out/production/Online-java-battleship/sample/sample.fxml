<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="ipDomainIN" promptText="ip/domain" text="localhost" GridPane.rowIndex="0"/>
    <TextField fx:id="portIN"  promptText="port" text="8545" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameIN"  promptText="username" text="battleship-user" GridPane.rowIndex="2"/>
    <TextField fx:id="groupIN"  promptText="group" text="battleship-group" GridPane.rowIndex="3"/>
    <Button onAction="#buttonPressed" GridPane.rowIndex="5" text="Connect"/>

</GridPane>